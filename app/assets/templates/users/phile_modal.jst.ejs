<div class="modal-overlay"></div>

<article class="modal file-modal">
  <a href="javascript:void(0)" class="modal-dismiss">X</a>

  <h2><%= phile.get("name") %></h2>

  <form class="tag-form">
    <input type="text" placeholder="New tag">
  </form>

  <ul>
    <% phile.taggings().each(function (tag) { %>
      <li class="clearfix">
        <strong class="tag-name"><%= tag.get("name") %></strong>
        <button class="tag-delete" data-tag-id="<%= tag.id %>">delete</button>
      </li>
    <% }) %>
  </ul>
</article>

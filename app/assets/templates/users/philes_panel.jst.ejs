<% if (user.get("is_current_user")) { %>
  <form enctype="multipart/form-data">
    <input type="hidden" name="matt" value="matt">
    <div class="file-input-button">
      <label class="button" for="phile-input">Choose File</label>
      <input type="file" name="phile" id="phile-input">
    </div>
    <button class="file-upload">Upload a file</button>
  </form>
<% } %>

<input class="file-search" type="text" placeholder="Find a file...">

<ul class="file-list">
  <% user.philes().each(function (phile) { %>
  <li class="clearfix">
    <a href="/philes/<%= phile.id %>"><%= phile.escape("name") %></a>
    <ul class="file-controls clearfix">
      <li><button class="phile-tag" data-phile-id="<%= phile.id %>">tag</button></li>
      <li><button class="phile-delete" data-phile-id="<%= phile.id %>">delete</button></li>
    </ul>
  </li>
  <% }) %>
</ul>

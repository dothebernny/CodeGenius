.file-header {
  font-size: 20px;
  padding: 40px 20px 20px 20px;
  border-bottom: 1px solid #808080;
  background: url(<%= asset_path('the_matrix.jpg') %>);
}

.file-header > h1 {
  font-weight: 700;
}

.file-header .filename {
  background: rgb(255, 208, 29);
  background: rgba(255, 208, 29, 0.75);
  color: #000000;
  padding: 5px 10px;
}

.file-header > h2 {
  padding-top: 10px;
}

.file-header .author {
  background: rgb(64, 64, 64);
  background: rgba(64, 64, 64, 0.75);
  padding: 5px 10px;
}

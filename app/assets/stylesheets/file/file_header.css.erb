.file-header {
  font-size: 20px;
  padding: 40px 20px 20px 20px;
  border-bottom: 1px solid white;
  font-family: 'Roboto', sans-serif;
  background: url(<%= asset_path('the_matrix.jpg') %>);
}

.file-header > h1 {
  font-weight: 700;
}

.file-header .filename {
  background: #ffc31c;
  color: #000000;
  padding: 5px 10px;
}

.file-header > h2 {
  padding-top: 10px;
}

.file-header .author {
  background: #404040;
  padding: 5px 10px;
}

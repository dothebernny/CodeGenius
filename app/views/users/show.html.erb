<main class="content clearfix">
  <section class="sidebar">
    <h1><%= @user.name %></h1>

    <p>Avatar goes here</p>

    <% if current_user != @user %>
      <%= render "follows/form", user: @user %>
    <% end %>
  </section>

  <main class="main-panel">
    <nav>
      <ul class="main-panel-tabs clearfix">
        <li class="activated"><a href="#files">Files</a></li>
        <li><a href="#follows">Follows</a></li>
        <li><a href="#feeds">Feed</a></li>
      </ul>
    </nav>

    <section id="#files" class="file-panel">
      <form action="<%= philes_url %>" method="post" enctype="multipart/form-data">
        <%= auth_token %>
        <div class="file-input-button">
          <label class="button" for="phile-input">Choose File</label>
          <input type="file" name="phile" id="phile-input">
        </div>
        <button class="file-upload">Upload a file</button>
      </form>

      <ul class="file-list">
        <% @user.philes.each do |phile| %>
          <li>
            <a href="<%= phile_url(phile) %>"><%= phile.name %></a>
          </li>
        <% end %>
      </ul>
    </section>

    <section id="#follows" class="follows-panel hidden">
      <article>
        <h1>Following</h1>
        <ul>
          <% @user.follows.each do |user| %>
            <li><a href="<%= user_url(user) %>"><%= user.name %></a></li>
          <% end %>
        </ul>
      </article>

      <article>

  </main>
</main>

<script type="text/javascript">
$(document).ready(function () {
  CodeGenius.userProfile(<%= @user.id %>);
});
</script>
